@model Identity_Training_App.Models.View_Models.TwoFactorAuthenticationViewModel

<p>
    Please enter the code below in your authenticator app.
</p>
<p>
    @Model.Token
</p>
<p> Or scan the below QRCode with your app.</p>
<div id="qrCode"></div>

<form method='post' asp-action="EnableAuthenticator" asp-controller="Account">
    <input hidden asp-for="Token" />
    <div class="form-group">
        Enter code: <input type="text" class="form-control" asp-for=Code />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts{
    <script src="~/js/qrcode.js"></script>
    <script type="text/javascript">
        new QRCode(document.getElementById("qrCode"),"@Model.QRCodeUrl")
        </script>
}