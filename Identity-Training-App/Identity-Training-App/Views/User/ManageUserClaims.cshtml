@model Identity_Training_App.Models.View_Models.UserClaimsVM

<form method="post" >
    <input asp-for="@Model.UserId" hidden />
    <div class="card">
        <div class="card-header">
            <h2> Manage user claims </h2>
        </div>
        <div class="card-body">
            @for(int i=0; i < Model.userClaims.Count;i++)
            {
                <div class="m-2 form-check">
                    <input asp-for="@Model.userClaims[i].ClaimType" hidden>
                    <input asp-for="@Model.userClaims[i].IsSelected" class="form-form-check-input">
                    <label asp-for="@Model.userClaims[i].IsSelected" class="form-check-label">
                        @Model.userClaims[i].ClaimType
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
       <div class="card-footer">
           <input type="submit" value="Update" class="btn btn-success" />
           <a asp-action="Index" class="btn btn-warning">Back to users</a>
       </div>
    </div>
</form>